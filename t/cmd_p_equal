#!/bin/sh

[ -e tests.sh ] && . ./tests.sh || . ../tests.sh


NAME='p= 0xff 0x00'
FILE=-
CMDS='
b 2
wx 0xff
p=
'
EXPECT='         ___________________________________________________
00 00ff | __________________________________________________|
01 0000 ||
'

run_test

NAME='p=b 0xff 0x00'
FILE=-
CMDS='
b 2
wx 0xff
p=b
'
EXPECT='         ___________________________________________________
00 00ff | __________________________________________________|
01 0000 ||
'

run_test

NAME='p=d'
FILE='../bins/elf/arm1.bin'
CMDS='p=d'
EXPECT='min:   1  0x1
max:   235  0xeb
dict:  65  0x41
range: 234  0xea
'

run_test

NAME='p=e 5'
FILE='../bins/elf/arm1.bin'
CMDS='p=e 5'
EXPECT='         _______________________________________
00 00c3 |                                      |
01 00c4 |                                       |
02 00c4 |                                       |
03 00c4 |                             __________|
04 008f | ____________________________|
'

run_test

NAME='p=e 5 0x100'
FILE='../bins/elf/arm1.bin'
CMDS='p=e 5 0x100'
EXPECT='         __________________________
00 0080 |                      ___|
01 006c |                     |__
02 007b |                      ___|
03 006a |                   __|
04 005f | __________________|
'

run_test

NAME='p=e 5 0x100 1'
FILE='../bins/elf/arm1.bin'
CMDS='p=e 5 0x100 1'
EXPECT='         ______________________
00 006c |                     |__
01 007b |                      ___|
02 006a |                   __|
03 005f |                  |
04 005a | _________________|
'

run_test

NAME='p=p 5'
FILE='../bins/elf/arm1.bin'
CMDS='p=p 5'
EXPECT='         __________
00 0032 |         |
01 0032 |         |
02 0034 |          |___
03 0047 |              |__
04 0055 | ________________|
'

run_test

NAME='p=p 5 0x100'
FILE='../bins/elf/arm1.bin'
CMDS='p=p 5 0x100'
EXPECT='         __________
00 0032 |     ____|
01 0019 |    |
02 001e |     |
03 001e |     |_
04 0028 | _______|
'

run_test

NAME='p=p 5 0x100 1'
FILE='../bins/elf/arm1.bin'
CMDS='p=p 5 0x100 1'
EXPECT='         _____
00 0019 |    |
01 001e |     |
02 001e |     |_
03 0028 |      _|
04 001e | _____|
'

run_test
